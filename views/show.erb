<h2>
  メモ詳細ページ
</h2>
<div class='text-center'>
  <% @result.each do |memo| %>
    <p>タイトル:<%= memo["title"] %></p>
    <p class="d-inline-block text-left">
      内容:<%= memo["content"].gsub(/\n/, "<br/>　　 ") %>
    </p>
    <p>作成日: <%= memo["created_at"] %></P>
  <% end %>
</div>

<section class="container">
<div class="row">
  <form action="/<%= @id[0] %>/edit" method="post" class="col-10 text-right">
  <div calass='form-control'>
    <input type="hidden" name="_method" value="patch">
    <button class="btn btn-success inline-block" type="submit">編集</button>
  </div>
  </form>

  <form action="/<%= @id[0] %>" method="post" class="col-2">
    <div calass='form-control'>
      <input type="hidden" name="_method" value="delete">
      <button class="btn btn-success" type="submit">削除</button>
    </div>
  </form>
  </section>
</div>
<p><a href="http://localhost:4567/">トップページへ</a></p>