<h2>
  メモ編集ページ
</h2>

<p><a href="http://localhost:4567/">トップページへ</a></p>

<section class="w-100">
  <% @result.each do |memo| %>
    <div class="row justify-content-center">
      <form action="/<%= @id[0] %>" method="post" class="w-75">
        <div class="form-group">
          <label for="text1">タイトル</label>
          <input type="text" name="title" id="text1" class="form-control" value="<%= memo["title"] %>">
        </div>

        <div class="form-group">
          <label for="textarea1">内容</label>
          <textarea id="textarea1" name="content" class ="form-control" rows="10"><%= memo["content"] %></textarea>
        </div>

        <button class="btn btn-success" type="submit">編集</button>
      </form>
    </div>
  <% end %>
</section>